{
    //ESlint AutoFix on save
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "eslint.workingDirectories": [
        "./client",
        "./server"
    ],
    // Show Git Folder
    "files.exclude": {
        "**/.git": false,
    },
    "editor.fontFamily": "Firal code,Consolas, 'Courier New', monospace"
}